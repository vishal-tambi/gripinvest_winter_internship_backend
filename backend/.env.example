# Backend Environment Configuration for Investment Platform

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3001
APP_NAME=Investment Platform API

# =============================================================================
# DATABASE CONFIGURATION (MySQL - Required by specification)
# =============================================================================
# MySQL Connection
DB_HOST=localhost
DB_PORT=3306
DB_NAME=investment_platform
DB_USER=root
DB_PASSWORD=root

# For Docker
DATABASE_URL=mysql://root:root@localhost:3306/investment_platform

# Database Pool Settings
DB_POOL_MIN=0
DB_POOL_MAX=5
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# AI SERVICE CONFIGURATION (Google Gemini)
# =============================================================================
GOOGLE_AI_API_KEY=your-gemini-api-key-here
AI_MODEL=gemini-pro

# =============================================================================
# EMAIL CONFIGURATION (for password reset)
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@investmentplatform.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Password Reset Token Expiry (minutes)
PASSWORD_RESET_EXPIRES=15

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable request logging
ENABLE_REQUEST_LOGGING=true

# Enable detailed error messages
ENABLE_DETAILED_ERRORS=true